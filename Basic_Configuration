#update and upgrade
sudo apt update
sudo apt list --upgradable
sudo apt upgrade -y

#install a decent terminal and editor
sudo apt install -y terminator vim

#install ssh
sudo apt install openssh-server
systemctl status sshd.service
ss -ntulp | grep :22

#install net-tools
sudo apt install net-tools
